---
import type { PaginationLink } from "@/data/shared";

interface Props {
	prevUrl?: PaginationLink;
	nextUrl?: PaginationLink;
}

const { prevUrl, nextUrl } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
		<nav class="pagination-nav flex items-center gap-x-4 py-4" aria-label="Pagination">
			{prevUrl && (
				<a class="pagination-link pagination-prev mr-auto" href={prevUrl.url} rel="prefetch">
					{prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
					<span class="pagination-arrow" aria-hidden="true">&laquo;</span>
					<span class="pagination-text">{prevUrl.text ? prevUrl.text : "Previous"}</span>
				</a>
			)}
			{nextUrl && (
				<a class="pagination-link pagination-next ml-auto" href={nextUrl.url} rel="prefetch">
					{nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
					<span class="pagination-text">{nextUrl.text ? nextUrl.text : "Next"}</span>
					<span class="pagination-arrow" aria-hidden="true">&raquo;</span>
				</a>
			)}
		</nav>
	)
}

<style>
	.pagination-nav {
		margin-top: 2rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 107, 157, 0.2);
	}

	.pagination-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background: rgba(255, 107, 157, 0.1);
		border: 1px solid var(--neon-pink);
		border-radius: 8px;
		color: var(--neon-pink);
		font-family: 'Orbitron', sans-serif;
		font-size: 0.85rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 1px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.pagination-link:hover {
		background: rgba(255, 107, 157, 0.2);
		box-shadow: 0 0 15px var(--neon-pink), 0 0 30px rgba(255, 107, 157, 0.3);
		transform: translateY(-2px);
		text-shadow: 0 0 10px var(--neon-pink);
	}

	.pagination-link:focus-visible {
		outline: none;
		background: rgba(0, 217, 255, 0.2);
		border-color: var(--neon-cyan);
		color: var(--neon-cyan);
		box-shadow: 0 0 15px var(--neon-cyan);
	}

	.pagination-arrow {
		font-size: 1.2em;
		transition: transform 0.3s ease;
	}

	.pagination-prev:hover .pagination-arrow {
		transform: translateX(-4px);
	}

	.pagination-next:hover .pagination-arrow {
		transform: translateX(4px);
	}

	@media (prefers-reduced-motion: reduce) {
		.pagination-link {
			transition: none;
		}

		.pagination-link:hover {
			transform: none;
		}

		.pagination-arrow {
			transition: none;
		}

		.pagination-prev:hover .pagination-arrow,
		.pagination-next:hover .pagination-arrow {
			transform: none;
		}
	}
</style>
