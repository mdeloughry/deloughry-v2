---
import type { PaginationLink } from "@/data/shared";

interface Props {
	prevUrl?: PaginationLink;
	nextUrl?: PaginationLink;
}

const { prevUrl, nextUrl } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
		<div class="bbs-paginator flex items-center gap-4 w-full">
			{prevUrl ? (
				<a
					class="bbs-button text-xs mr-auto"
					href={prevUrl.url}
					rel="prefetch"
					aria-label={prevUrl.srLabel || "Go to previous page"}
				>
					<span aria-hidden="true">[&lt;]</span>
					{prevUrl.text ? prevUrl.text : "PREV"}
				</a>
			) : (
				<span class="text-bbs-gray text-xs mr-auto opacity-50">[&lt;] PREV</span>
			)}

			{nextUrl ? (
				<a
					class="bbs-button text-xs ml-auto"
					href={nextUrl.url}
					rel="prefetch"
					aria-label={nextUrl.srLabel || "Go to next page"}
				>
					{nextUrl.text ? nextUrl.text : "NEXT"}
					<span aria-hidden="true">[&gt;]</span>
				</a>
			) : (
				<span class="text-bbs-gray text-xs ml-auto opacity-50">NEXT [&gt;]</span>
			)}
		</div>
	)
}

<style>
	.bbs-paginator {
		font-family: 'IBM Plex Mono', monospace;
	}
</style>
