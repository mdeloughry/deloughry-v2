---
import Twitch from "./assets/svgs/Twitch.astro";
import Mastodon from "./assets/svgs/Mastodon.astro";
import GitHub from "./assets/svgs/GitHub.astro";
---

<nav class="social-list" aria-label="Social media links">
	<span class="social-label font-mono text-sm text-muted uppercase tracking-wider" aria-hidden="true">
		FIND_ME >>
	</span>
	<ul class="social-links">
		<li>
			<a
				class="social-link"
				href="https://github.com/DR-DinoMight"
				target="_blank"
				rel="noopener noreferrer me authn"
				aria-label="GitHub profile (opens in new tab)"
			>
				<GitHub class="social-icon" aria-hidden="true" />
				<span class="social-name">GITHUB</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
		<li>
			<a
				class="social-link"
				href="https://phpc.social/@DrDinoMight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Mastodon profile (opens in new tab)"
			>
				<Mastodon class="social-icon" aria-hidden="true" />
				<span class="social-name">MASTODON</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
		<li>
			<a
				class="social-link"
				href="https://www.twitch.tv/dr_dinomight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Twitch channel (opens in new tab)"
			>
				<Twitch class="social-icon" aria-hidden="true" />
				<span class="social-name">TWITCH</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
	</ul>
</nav>

<style>
	.social-list {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 1rem;
	}

	.social-links {
		display: flex;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 0.75rem;
		border: 2px solid var(--theme-accent);
		font-family: 'Space Mono', monospace;
		font-size: 0.75rem;
		color: var(--theme-accent);
		text-decoration: none;
		transition: all 0.15s ease;
	}

	.social-link:hover {
		background: var(--theme-accent);
		color: var(--theme-bg);
		transform: translate(-2px, -2px);
		box-shadow: 2px 2px 0 currentColor;
	}

	.social-link:focus-visible {
		outline: 2px solid var(--theme-accent);
		outline-offset: 2px;
	}

	.social-link:hover .social-icon {
		fill: var(--theme-bg);
	}

	.social-icon {
		width: 1rem;
		height: 1rem;
		fill: var(--theme-accent);
		transition: fill 0.15s ease;
	}

	.social-name {
		display: none;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	@media (min-width: 640px) {
		.social-name {
			display: inline;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.social-link:hover {
			transform: none;
			box-shadow: none;
		}
	}
</style>
