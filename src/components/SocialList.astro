---
import Mastodon from "./assets/svgs/Mastodon.astro";
import GitHub from "./assets/svgs/GitHub.astro";
import X from "./assets/svgs/X.astro";
import Bluesky from "./assets/svgs/Bluesky.astro";
---

<nav class="social-list" aria-label="Social media links">
	<span class="social-label font-mono text-sm text-muted uppercase tracking-wider" aria-hidden="true">
		FIND_ME >>
	</span>
	<ul class="social-links">
		<li>
			<a
				class="social-link social-link--github"
				href="https://github.com/DR-DinoMight"
				target="_blank"
				rel="noopener noreferrer me authn"
				aria-label="GitHub profile (opens in new tab)"
			>
				<GitHub class="social-icon" aria-hidden="true" />
				<span class="social-name">GITHUB</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
		<li>
			<a
				class="social-link social-link--x"
				href="https://x.com/dr_dinomight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="X (Twitter) profile (opens in new tab)"
			>
				<X class="social-icon" aria-hidden="true" />
				<span class="social-name">X</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
		<li>
			<a
				class="social-link social-link--bluesky"
				href="https://bsky.app/profile/deloughry.co.uk"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Bluesky profile (opens in new tab)"
			>
				<Bluesky class="social-icon" aria-hidden="true" />
				<span class="social-name">BLUESKY</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
		<li>
			<a
				class="social-link social-link--mastodon"
				href="https://phpc.social/@DrDinoMight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Mastodon profile (opens in new tab)"
			>
				<Mastodon class="social-icon" aria-hidden="true" />
				<span class="social-name">MASTODON</span>
				<span class="sr-only"> (opens in new tab)</span>
			</a>
		</li>
	</ul>
</nav>

<style>
	.social-list {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 1rem;
	}

	.social-links {
		display: flex;
		gap: 0.75rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		border: 2px solid currentColor;
		border-radius: 2px;
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.75rem;
		font-weight: 500;
		text-decoration: none;
		transition: background 0.15s ease, color 0.15s ease;
	}

	.social-link:hover {
		color: var(--theme-bg);
	}

	.social-link:focus-visible {
		outline: 2px solid currentColor;
		outline-offset: 2px;
	}

	.social-link:hover .social-icon {
		fill: var(--theme-bg);
	}

	.social-icon {
		width: 1rem;
		height: 1rem;
		fill: currentColor;
		transition: fill 0.15s ease;
	}

	/* Brand colors */
	.social-link--github {
		color: var(--color-success);
	}
	.social-link--github:hover {
		background: var(--color-success);
	}

	.social-link--x {
		color: var(--theme-text);
	}
	.social-link--x:hover {
		background: var(--theme-text);
	}

	.social-link--bluesky {
		color: var(--color-cyan);
	}
	.social-link--bluesky:hover {
		background: var(--color-cyan);
	}

	.social-link--mastodon {
		color: var(--color-purple);
	}
	.social-link--mastodon:hover {
		background: var(--color-purple);
	}

	.social-name {
		display: none;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	@media (min-width: 640px) {
		.social-name {
			display: inline;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.social-link:hover {
			transform: none;
		}
	}
</style>
