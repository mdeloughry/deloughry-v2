---
import Twitch from "./assets/svgs/Twitch.astro";
import Mastodon from "./assets/svgs/Mastodon.astro";
import GitHub from "./assets/svgs/GitHub.astro";
---

<div class="social-list flex flex-wrap items-center gap-x-4 sm:items-center">
	<p class="social-label font-orbitron text-sm uppercase tracking-wider text-neon-cyan">Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		<li>
			<a
				class="social-link social-link-github inline-flex items-center justify-center p-3 rounded-lg transition-all duration-300"
				href="https://github.com/DR-DinoMight"
				target="_blank"
				rel="noopener noreferrer me authn"
				aria-label="GitHub profile"
			>
				<GitHub class="h-6 w-6 fill-current" />
			</a>
		</li>
		<li>
			<a
				class="social-link social-link-mastodon inline-flex items-center justify-center p-3 rounded-lg transition-all duration-300"
				href="https://phpc.social/@DrDinoMight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Mastodon profile"
			>
				<Mastodon class="h-6 w-6 fill-current" />
			</a>
		</li>
		<li>
			<a
				class="social-link social-link-twitch inline-flex items-center justify-center p-3 rounded-lg transition-all duration-300"
				href="https://www.twitch.tv/dr_dinomight"
				target="_blank"
				rel="noopener noreferrer me"
				aria-label="Twitch channel"
			>
				<Twitch class="h-6 w-6 fill-current" />
			</a>
		</li>
	</ul>
</div>

<style>
	.social-label {
		text-shadow: 0 0 10px var(--neon-cyan);
	}

	.social-link {
		background: rgba(255, 107, 157, 0.1);
		border: 1px solid transparent;
		color: var(--neon-pink);
	}

	.social-link:hover {
		background: rgba(255, 107, 157, 0.2);
		border-color: var(--neon-pink);
		box-shadow: 0 0 15px var(--neon-pink);
		transform: translateY(-2px);
	}

	.social-link:focus-visible {
		outline: none;
		background: rgba(0, 217, 255, 0.2);
		border-color: var(--neon-cyan);
		box-shadow: 0 0 15px var(--neon-cyan);
		color: var(--neon-cyan);
	}

	/* GitHub specific */
	.social-link-github:hover {
		color: var(--github);
		border-color: var(--github);
		box-shadow: 0 0 15px var(--github);
		background: rgba(108, 198, 68, 0.1);
	}

	/* Mastodon specific */
	.social-link-mastodon:hover {
		color: var(--neon-purple);
		border-color: var(--neon-purple);
		box-shadow: 0 0 15px var(--neon-purple);
		background: rgba(199, 163, 255, 0.1);
	}

	/* Twitch specific */
	.social-link-twitch:hover {
		color: var(--twitch);
		border-color: var(--twitch);
		box-shadow: 0 0 15px var(--twitch);
		background: rgba(145, 70, 255, 0.1);
	}

	@media (prefers-reduced-motion: reduce) {
		.social-link {
			transition: none;
		}

		.social-link:hover {
			transform: none;
		}
	}
</style>
