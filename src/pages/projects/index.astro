---
import PageLayout from "@/layouts/Base";
import { getAllProjects } from "@/lib/projects.data";
import { getTagSlug, formatTagForDisplay } from "@/utils";

const projects = await getAllProjects();

const meta = {
  title: "Projects",
  description: "A collection of tools, experiments, and work in progress",
};
export const prerender = true;
---

<PageLayout meta={meta}>
  <div class="projects-page">
    <!-- Header -->
    <header class="page-header">
      <h1 class="page-title"><span class="accent-slash">//</span> Projects</h1>
      <p class="page-subtitle">{projects.length} projects</p>
    </header>

    <!-- Projects Grid -->
    <div class="projects-grid stagger-reveal">
      {projects.map((project) => (
        <article class="brutal-card project-card">
          <div class="project-header">
            <div class="project-status-badge" data-status={project.status}>
              {formatTagForDisplay(project.status)}
            </div>
          </div>

          <h2 class="project-title">
            <a
              href={project.url || `/projects/${project.slug}`}
              {...(project.url ? { target: "_blank", rel: "noopener noreferrer" } : {})}
            >
              {project.title}
              {project.url && <span class="external-icon" aria-hidden="true">â†—</span>}
            </a>
          </h2>

          <p class="project-description">{project.description}</p>

          <div class="project-meta">
            <span class="project-category">{formatTagForDisplay(project.category)}</span>
          </div>

          {project.tags && project.tags.length > 0 && (
            <div class="project-tags">
              {project.tags.map((tag) => (
                <a
                  href={`/projects/tags/${getTagSlug(tag)}`}
                  class="brutal-tag"
                  title={`View projects with tag: ${formatTagForDisplay(tag)}`}
                >
                  {formatTagForDisplay(tag)}
                </a>
              ))}
            </div>
          )}

          {project.technologies && project.technologies.length > 0 && (
            <div class="project-tech">
              {project.technologies.map((tech) => (
                <span class="tech-item">{tech}</span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>

  <style>
    .projects-page {
      display: flex;
      flex-direction: column;
      gap: var(--space-xl);
    }

    /* Header */
    .page-header {
      padding-bottom: var(--space-lg);
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .page-title {
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--text-display);
      font-weight: 600;
      line-height: 1;
      margin: 0 0 var(--space-xs) 0;
      color: var(--theme-text);
      letter-spacing: -0.02em;
    }

    .accent-slash {
      color: var(--theme-accent);
      margin-right: 0.25rem;
    }

    .page-subtitle {
      font-size: var(--text-sm);
      color: var(--theme-muted);
      margin: 0;
    }

    /* Projects Grid */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-md);
    }

    .project-card {
      display: flex;
      flex-direction: column;
      gap: var(--space-sm);
    }

    /* Project Header */
    .project-header {
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }

    .project-status-badge {
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--text-xs);
      font-weight: 500;
      padding: 0.125rem 0.5rem;
      border-radius: var(--radius-subtle);
    }

    .project-status-badge[data-status="active"] {
      color: var(--theme-accent);
      background: var(--theme-accent-dim);
    }

    .project-status-badge[data-status="wip"],
    .project-status-badge[data-status="in-progress"] {
      color: var(--glitch-cyan);
      background: rgba(0, 229, 255, 0.1);
    }

    .project-status-badge[data-status="archived"],
    .project-status-badge[data-status="deprecated"] {
      color: var(--theme-muted);
      background: rgba(255, 255, 255, 0.05);
    }

    .project-status-badge[data-status="experimental"] {
      color: #FF6B9D;
      background: rgba(255, 107, 157, 0.1);
    }

    /* Project Content */
    .project-title {
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--text-lg);
      font-weight: 600;
      margin: 0;
      line-height: 1.3;
      letter-spacing: -0.01em;
    }

    .project-title a {
      color: var(--theme-text);
      transition: color var(--transition-fast);
      display: inline-flex;
      align-items: baseline;
      gap: 0.375rem;
    }

    .project-title a:hover {
      color: var(--theme-accent);
    }

    .external-icon {
      font-size: 0.7em;
      color: var(--theme-muted);
    }

    .project-description {
      font-size: var(--text-sm);
      color: var(--theme-muted);
      line-height: 1.6;
      margin: 0;
    }

    .project-meta {
      display: flex;
      gap: var(--space-sm);
    }

    .project-category {
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--text-xs);
      color: var(--theme-muted);
    }

    .project-tags {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-xs);
    }

    .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-xs);
      align-items: center;
      padding-top: var(--space-sm);
      border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .tech-item {
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--text-xs);
      color: var(--theme-muted);
      padding: 0.125rem 0.375rem;
      background: rgba(255, 255, 255, 0.03);
      border-radius: var(--radius-subtle);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .projects-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</PageLayout>
