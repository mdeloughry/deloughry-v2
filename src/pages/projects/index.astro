---
import PageLayout from "@/layouts/Base";
import { getAllProjects } from "@/lib/projects.data";
import { getTagSlug, formatTagForDisplay } from "@/utils";

const projects = await getAllProjects();

const meta = {
  title: "Projects",
  description: "A collection of tools, experiments, and work in progress",
};
export const prerender = true;
---

<PageLayout meta={meta}>
  <div class="projects-page">
    <!-- Header -->
    <header class="page-header">
      <h1 class="page-title glitch-text" data-text="PROJECTS_">
        <span class="text-accent">//</span> PROJECTS_
      </h1>
      <p class="page-subtitle">
        TOOLS // EXPERIMENTS // WORK_IN_PROGRESS
      </p>
      <div class="header-line" aria-hidden="true">
        <span class="line"></span>
        <span class="count">[{projects.length}_ITEMS]</span>
        <span class="line"></span>
      </div>
    </header>

    <!-- Projects Grid - broken/overlapping layout -->
    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class={`brutal-card project-card ${index % 3 === 1 ? 'project-offset-up' : ''} ${index % 3 === 2 ? 'project-offset-down' : ''}`}>
          <div class="project-header">
            <span class="project-index">[{String(index + 1).padStart(2, '0')}]</span>
            <div class="project-status-badge" data-status={project.status}>
              {formatTagForDisplay(project.status)}
            </div>
          </div>

          <h2 class="project-title">
            <a
              href={project.url || `/projects/${project.slug}`}
              class="brutal-link"
              data-text={project.title}
              {...(project.url ? { target: "_blank", rel: "noopener noreferrer" } : {})}
            >
              {project.title}
              {project.url && <span class="external-icon">^</span>}
            </a>
          </h2>

          <p class="project-description">{project.description}</p>

          <div class="project-meta">
            <span class="project-category">
              <span class="text-accent">&gt;</span> {formatTagForDisplay(project.category)}
            </span>
          </div>

          {project.tags && project.tags.length > 0 && (
            <div class="project-tags">
              {project.tags.map((tag) => (
                <a
                  href={`/projects/tags/${getTagSlug(tag)}`}
                  class="brutal-tag"
                  title={`View projects with tag: ${formatTagForDisplay(tag)}`}
                >
                  {formatTagForDisplay(tag)}
                </a>
              ))}
            </div>
          )}

          {project.technologies && project.technologies.length > 0 && (
            <div class="project-tech">
              <span class="tech-label">STACK:</span>
              {project.technologies.map((tech) => (
                <span class="tech-item">{tech}</span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>

  <style>
    .projects-page {
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }

    /* Header */
    .page-header {
      text-align: center;
      padding-bottom: 2rem;
    }

    .page-title {
      font-family: 'Space Mono', monospace;
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 700;
      line-height: 1;
      margin: 0 0 1rem 0;
      text-transform: uppercase;
      color: var(--theme-text);
    }

    .page-subtitle {
      font-family: 'Space Mono', monospace;
      font-size: 0.875rem;
      color: var(--theme-muted);
      letter-spacing: 0.1em;
      margin: 0 0 1.5rem 0;
    }

    .header-line {
      display: flex;
      align-items: center;
      gap: 1rem;
      justify-content: center;
    }

    .header-line .line {
      height: 2px;
      width: 60px;
      background: var(--theme-accent);
    }

    .header-line .count {
      font-family: 'Space Mono', monospace;
      font-size: 0.75rem;
      color: var(--theme-accent);
      letter-spacing: 0.05em;
    }

    /* Projects Grid */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: 2rem;
    }

    .project-card {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .project-offset-up {
      margin-top: -1.5rem;
    }

    .project-offset-down {
      margin-top: 1.5rem;
    }

    /* Project Header */
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .project-index {
      font-family: 'Space Mono', monospace;
      font-size: 0.75rem;
      color: var(--theme-muted);
    }

    .project-status-badge {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: 2px solid;
    }

    .project-status-badge[data-status="active"] {
      color: var(--theme-accent);
      border-color: var(--theme-accent);
    }

    .project-status-badge[data-status="wip"],
    .project-status-badge[data-status="in-progress"] {
      color: var(--glitch-cyan);
      border-color: var(--glitch-cyan);
    }

    .project-status-badge[data-status="archived"],
    .project-status-badge[data-status="deprecated"] {
      color: var(--theme-muted);
      border-color: var(--theme-muted);
    }

    .project-status-badge[data-status="experimental"] {
      color: var(--glitch-pink);
      border-color: var(--glitch-pink);
    }

    /* Project Content */
    .project-title {
      font-family: 'Space Mono', monospace;
      font-size: 1.25rem;
      font-weight: 700;
      margin: 0;
      text-transform: uppercase;
      line-height: 1.3;
    }

    .project-title a {
      color: var(--theme-text);
      transition: color 0.15s ease;
      display: inline-flex;
      align-items: baseline;
      gap: 0.5rem;
    }

    .project-title a:hover {
      color: var(--theme-accent);
    }

    .external-icon {
      font-size: 0.75em;
      color: var(--theme-accent);
      transform: rotate(45deg);
      display: inline-block;
    }

    .project-description {
      font-size: 0.9rem;
      color: var(--theme-muted);
      line-height: 1.6;
      margin: 0;
    }

    .project-meta {
      display: flex;
      gap: 1rem;
    }

    .project-category {
      font-family: 'Space Mono', monospace;
      font-size: 0.8rem;
      color: var(--theme-text);
      text-transform: uppercase;
    }

    .project-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      align-items: center;
      padding-top: 0.5rem;
      border-top: 1px dashed var(--theme-muted);
    }

    .tech-label {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      color: var(--theme-muted);
      text-transform: uppercase;
    }

    .tech-item {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      color: var(--glitch-cyan);
      padding: 0.125rem 0.5rem;
      border: 1px solid var(--glitch-cyan);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .projects-grid {
        grid-template-columns: 1fr;
      }

      .project-offset-up,
      .project-offset-down {
        margin-top: 0;
      }
    }
  </style>
</PageLayout>
