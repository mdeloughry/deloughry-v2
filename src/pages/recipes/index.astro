---
import { getAllRecipes } from '../../lib/recipes.data';
import BaseLayout from '../../layouts/Base.astro';
import { getTagSlug, formatTagForDisplay } from '@/utils';
const recipes = await getAllRecipes();
const meta = {
	title: 'Recipes',
	description: 'Cooklang recipes with timers, scaling, and cook mode.',
	ogImage: undefined,
	articleDate: undefined,
};
---

<BaseLayout meta={meta}>
	<div class="recipes-listing">
		<header class="recipes-header">
			<h1 class="recipes-title">
				<span class="title-decorator" aria-hidden="true">{`{`}</span>
				Recipes
				<span class="title-decorator" aria-hidden="true">{`}`}</span>
			</h1>
			<p class="recipes-subtitle">Discover delicious recipes with interactive timers and cook mode</p>
		</header>

		<div class="recipes-grid" id="list">
			{recipes.map((r, index) => (
				<article class="recipe-card neon-card" style={`animation-delay: ${index * 0.06}s`}>
					{r.image && (
						<div class="recipe-card-image">
							<img src={r.image} alt="" aria-hidden="true" />
							<div class="image-overlay" aria-hidden="true"></div>
						</div>
					)}
					<div class="recipe-card-content">
						<h2 class="recipe-card-title">
							<a href={`/recipes/${r.slug}/`}>{r.title}</a>
						</h2>
						{r.description && <p class="recipe-card-description">{r.description}</p>}
						{r.tags.length ? (
							<div class="recipe-card-tags">
								{r.tags.map((tag) => (
									<a href={`/recipes/tags/${getTagSlug(tag)}`} class="neon-tag" title={`View recipes with tag: ${formatTagForDisplay(tag)}`}>
										{formatTagForDisplay(tag)}
									</a>
								))}
							</div>
						) : null}
						{r.servings && (
							<div class="recipe-card-meta">
								<span class="servings">
									<svg class="servings-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
										<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
										<circle cx="9" cy="7" r="4" />
										<path d="M23 21v-2a4 4 0 0 0-3-3.87" />
										<path d="M16 3.13a4 4 0 0 1 0 7.75" />
									</svg>
									{r.servings} servings
								</span>
							</div>
						)}
					</div>
				</article>
			))}
		</div>

		<script type="application/json" id="recipes-data">{JSON.stringify(recipes)}</script>
	</div>

	<style>
		.recipes-listing {
			max-width: 1200px;
			margin: 0 auto;
			padding: 1rem;
		}

		.recipes-header {
			text-align: center;
			margin-bottom: 3rem;
			position: relative;
			padding-bottom: 2rem;
		}

		.recipes-header::after {
			content: '';
			position: absolute;
			bottom: 0;
			left: 50%;
			transform: translateX(-50%);
			width: 200px;
			height: 2px;
			background: linear-gradient(
				90deg,
				transparent,
				var(--neon-purple),
				var(--neon-orange),
				var(--neon-purple),
				transparent
			);
			box-shadow: 0 0 10px var(--neon-purple);
		}

		.recipes-title {
			font-size: 3rem;
			font-weight: 700;
			margin-bottom: 1rem;
			color: var(--neon-purple);
			font-family: 'Orbitron', sans-serif;
			text-transform: uppercase;
			letter-spacing: 3px;
			text-shadow:
				0 0 10px var(--neon-purple),
				0 0 20px var(--neon-purple),
				0 0 40px rgba(199, 163, 255, 0.5);
		}

		.title-decorator {
			color: var(--neon-orange);
			text-shadow:
				0 0 10px var(--neon-orange),
				0 0 20px var(--neon-orange);
		}

		.recipes-subtitle {
			font-size: 1.1rem;
			color: var(--theme-quote);
			font-style: italic;
			margin: 0;
		}

		.recipes-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
			gap: 1.5rem;
		}

		.recipe-card {
			border-radius: 12px;
			overflow: hidden;
			opacity: 0;
			animation: fade-in 0.5s ease-out forwards;
		}

		@keyframes fade-in {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.recipe-card-image {
			position: relative;
			overflow: hidden;
			height: 180px;
		}

		.recipe-card-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: all 0.4s ease;
			filter: saturate(0.8) brightness(0.9);
		}

		.recipe-card:hover .recipe-card-image img {
			filter: saturate(1.2) brightness(1);
			transform: scale(1.05);
		}

		.image-overlay {
			position: absolute;
			inset: 0;
			background: linear-gradient(
				180deg,
				transparent 0%,
				rgba(10, 10, 10, 0.2) 50%,
				rgba(10, 10, 10, 0.8) 100%
			);
			pointer-events: none;
			user-select: none;
		}

		.recipe-card-content {
			padding: 1.5rem;
		}

		.recipe-card-title {
			margin: 0 0 0.75rem 0;
			font-size: 1.3rem;
			font-weight: 600;
			font-family: 'Orbitron', sans-serif;
			text-transform: uppercase;
			letter-spacing: 0.5px;
		}

		.recipe-card-title a {
			color: var(--theme-text);
			text-decoration: none;
			transition: all 0.3s ease;
		}

		.recipe-card-title a:hover {
			color: var(--neon-purple);
			text-shadow: 0 0 10px var(--neon-purple);
		}

		/* Focus state - uses orange to differentiate from hover */
		.recipe-card-title a:focus-visible {
			outline: none;
			color: var(--neon-orange);
			text-shadow: 0 0 10px var(--neon-orange);
		}

		.recipe-card-description {
			margin: 0 0 1rem 0;
			color: var(--theme-quote);
			font-style: italic;
			line-height: 1.5;
			font-size: 0.9rem;
		}

		.recipe-card-tags {
			display: flex;
			flex-wrap: wrap;
			gap: 0.5rem;
			margin-bottom: 1rem;
		}

		.recipe-card-meta {
			display: flex;
			align-items: center;
			gap: 1rem;
			padding-top: 1rem;
			border-top: 1px solid rgba(199, 163, 255, 0.2);
		}

		.servings {
			color: var(--neon-orange);
			font-weight: 600;
			font-size: 0.85rem;
			display: flex;
			align-items: center;
			gap: 0.5rem;
			font-family: 'Orbitron', sans-serif;
			text-transform: uppercase;
			letter-spacing: 1px;
		}

		.servings-icon {
			width: 1rem;
			height: 1rem;
		}

		@media (max-width: 768px) {
			.recipes-listing {
				padding: 0.5rem;
			}

			.recipes-title {
				font-size: 2rem;
			}

			.recipes-grid {
				grid-template-columns: 1fr;
			}
		}

		/* Reduced motion support */
		@media (prefers-reduced-motion: reduce) {
			.recipe-card {
				animation: none;
				opacity: 1;
			}

			.recipe-card-image img {
				transition: none;
			}

			.recipe-card:hover .recipe-card-image img {
				transform: none;
			}

			.recipe-card-title a {
				transition: none;
			}

			.recipe-card-title a:hover,
			.recipe-card-title a:focus-visible {
				text-shadow: none;
			}
		}
	</style>
</BaseLayout>
