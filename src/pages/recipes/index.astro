---
import { getAllRecipes } from '../../lib/recipes.data';
import BaseLayout from '../../layouts/Base.astro';
import { getTagSlug, formatTagForDisplay } from '@/utils';
const recipes = await getAllRecipes();
const meta = {
	title: 'Recipes',
	description: 'Cooklang recipes with timers, scaling, and cook mode.',
	ogImage: undefined,
	articleDate: undefined,
};
---

<BaseLayout meta={meta}>
	<div class="recipes-page">
		<!-- Header -->
		<header class="page-header">
			<h1 class="page-title glitch-text" data-text="RECIPES_">
				<span class="text-accent">//</span> RECIPES_
			</h1>
			<p class="page-subtitle">
				COOKLANG // TIMERS // SCALING // COOK_MODE
			</p>
			<div class="header-line" aria-hidden="true">
				<span class="line"></span>
				<span class="count">[{recipes.length}_DISHES]</span>
				<span class="line"></span>
			</div>
		</header>

		<!-- Search -->
		<div class="search-container">
			<label for="q" class="sr-only">Search recipes</label>
			<div class="search-wrapper">
				<span class="search-prefix">&gt;</span>
				<input
					type="search"
					id="q"
					placeholder="SEARCH_RECIPES..."
					class="search-input"
				/>
			</div>
		</div>

		<!-- Recipes Grid -->
		<div class="recipes-grid" id="list">
			{recipes.map((r, index) => (
				<article class={`brutal-card recipe-card ${index % 4 === 1 || index % 4 === 2 ? 'brutal-card-offset' : ''}`}>
					{r.image && (
						<div class="recipe-image">
							<img src={r.image} alt={r.title} loading="lazy" />
							<div class="image-scanlines" aria-hidden="true"></div>
						</div>
					)}
					<div class="recipe-content">
						<div class="recipe-header">
							<span class="recipe-index">[{String(index + 1).padStart(2, '0')}]</span>
							{r.servings && (
								<span class="servings-badge">{r.servings}_SERV</span>
							)}
						</div>
						<h2 class="recipe-title">
							<a href={`/recipes/${r.slug}/`} class="glitch-hover" data-text={r.title}>
								{r.title}
							</a>
						</h2>
						{r.description && (
							<p class="recipe-description">{r.description}</p>
						)}
						{r.tags.length > 0 && (
							<div class="recipe-tags">
								{r.tags.map((tag) => (
									<a
										href={`/recipes/tags/${getTagSlug(tag)}`}
										class="brutal-tag"
										title={`View recipes with tag: ${formatTagForDisplay(tag)}`}
									>
										{formatTagForDisplay(tag)}
									</a>
								))}
							</div>
						)}
					</div>
				</article>
			))}
		</div>

		<script type="application/json" id="recipes-data">{JSON.stringify(recipes)}</script>
	</div>

	<script type="module">
		import Fuse from 'https://cdn.jsdelivr.net/npm/fuse.js@7.0.0/+esm';
		import DOMPurify from 'https://cdn.jsdelivr.net/npm/dompurify@3.0.6/+esm';
		const data = JSON.parse(document.getElementById('recipes-data').textContent);
		const fuse = new Fuse(data, { keys: ['title', 'tags', 'ingredients.name', 'description'] });
		const q = document.getElementById('q');
		const list = document.getElementById('list');

		function getTagSlug(tag) {
			return encodeURIComponent(tag.toLowerCase().trim());
		}

		function escapeHtml(text) {
			const div = document.createElement('div');
			div.textContent = text;
			return div.innerHTML;
		}

		q.addEventListener('input', () => {
			const term = q.value.trim();
			const results = term ? fuse.search(term).map((r) => r.item) : data;
			const html = results
				.map(
					(r, index) => `
						<article class="brutal-card recipe-card ${index % 4 === 1 || index % 4 === 2 ? 'brutal-card-offset' : ''}">
							${r.image ? `
								<div class="recipe-image">
									<img src="${escapeHtml(r.image)}" alt="${escapeHtml(r.title)}" loading="lazy" />
									<div class="image-scanlines" aria-hidden="true"></div>
								</div>
							` : ''}
							<div class="recipe-content">
								<div class="recipe-header">
									<span class="recipe-index">[${String(index + 1).padStart(2, '0')}]</span>
									${r.servings ? `<span class="servings-badge">${escapeHtml(String(r.servings))}_SERV</span>` : ''}
								</div>
								<h2 class="recipe-title">
									<a href="/recipes/${escapeHtml(r.slug)}/" class="glitch-hover" data-text="${escapeHtml(r.title)}">
										${escapeHtml(r.title)}
									</a>
								</h2>
								${r.description ? `<p class="recipe-description">${escapeHtml(r.description)}</p>` : ''}
								${r.tags.length ? `
									<div class="recipe-tags">
										${r.tags.map(tag => `<a href="/recipes/tags/${getTagSlug(tag)}" class="brutal-tag" title="View recipes with tag: ${escapeHtml(tag)}">${escapeHtml(tag)}</a>`).join('')}
									</div>
								` : ''}
							</div>
						</article>
					`
				)
				.join('');
			list.innerHTML = DOMPurify.sanitize(html);
		});
	</script>

	<style>
		.recipes-page {
			display: flex;
			flex-direction: column;
			gap: 3rem;
		}

		/* Header */
		.page-header {
			text-align: center;
			padding-bottom: 2rem;
		}

		.page-title {
			font-family: 'Space Mono', monospace;
			font-size: clamp(2.5rem, 8vw, 5rem);
			font-weight: 700;
			line-height: 1;
			margin: 0 0 1rem 0;
			text-transform: uppercase;
			color: var(--theme-text);
		}

		.page-subtitle {
			font-family: 'Space Mono', monospace;
			font-size: 0.875rem;
			color: var(--theme-muted);
			letter-spacing: 0.1em;
			margin: 0 0 1.5rem 0;
		}

		.header-line {
			display: flex;
			align-items: center;
			gap: 1rem;
			justify-content: center;
		}

		.header-line .line {
			height: 2px;
			width: 60px;
			background: var(--theme-accent);
		}

		.header-line .count {
			font-family: 'Space Mono', monospace;
			font-size: 0.75rem;
			color: var(--theme-accent);
			letter-spacing: 0.05em;
		}

		/* Search */
		.search-container {
			max-width: 500px;
			margin: 0 auto;
		}

		.search-wrapper {
			display: flex;
			align-items: center;
			border: 4px solid var(--theme-accent);
			background: var(--theme-bg-secondary);
		}

		.search-prefix {
			font-family: 'Space Mono', monospace;
			color: var(--theme-accent);
			padding: 0.75rem 0 0.75rem 1rem;
		}

		.search-input {
			flex: 1;
			background: transparent;
			border: none;
			padding: 0.75rem 1rem;
			font-family: 'Space Mono', monospace;
			font-size: 1rem;
			color: var(--theme-text);
			text-transform: uppercase;
		}

		.search-input::placeholder {
			color: var(--theme-muted);
		}

		.search-input:focus {
			outline: none;
		}

		.sr-only {
			position: absolute;
			width: 1px;
			height: 1px;
			padding: 0;
			margin: -1px;
			overflow: hidden;
			clip: rect(0, 0, 0, 0);
			white-space: nowrap;
			border: 0;
		}

		/* Recipes Grid */
		.recipes-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
			gap: 2rem;
		}

		.recipe-card {
			display: flex;
			flex-direction: column;
		}

		.recipe-image {
			position: relative;
			height: 180px;
			overflow: hidden;
			margin: -1.5rem -1.5rem 1rem -1.5rem;
			border-bottom: 4px solid var(--theme-accent);
		}

		.recipe-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			filter: grayscale(100%) contrast(1.1);
			transition: filter 0.3s ease, transform 0.3s ease;
		}

		.recipe-card:hover .recipe-image img {
			filter: grayscale(0%) contrast(1);
			transform: scale(1.05);
		}

		.image-scanlines {
			position: absolute;
			inset: 0;
			background: repeating-linear-gradient(
				0deg,
				transparent,
				transparent 2px,
				rgba(0, 0, 0, 0.15) 2px,
				rgba(0, 0, 0, 0.15) 4px
			);
			pointer-events: none;
		}

		.recipe-content {
			display: flex;
			flex-direction: column;
			flex: 1;
			gap: 0.75rem;
		}

		.recipe-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		.recipe-index {
			font-family: 'Space Mono', monospace;
			font-size: 0.75rem;
			color: var(--theme-muted);
		}

		.servings-badge {
			font-family: 'Space Mono', monospace;
			font-size: 0.7rem;
			padding: 0.25rem 0.5rem;
			color: var(--theme-accent);
			border: 2px solid var(--theme-accent);
			text-transform: uppercase;
		}

		.recipe-title {
			font-family: 'Space Mono', monospace;
			font-size: 1.25rem;
			font-weight: 700;
			margin: 0;
			text-transform: uppercase;
			line-height: 1.3;
		}

		.recipe-title a {
			color: var(--theme-text);
			transition: color 0.15s ease;
		}

		.recipe-title a:hover {
			color: var(--theme-accent);
		}

		.recipe-description {
			font-size: 0.9rem;
			color: var(--theme-muted);
			line-height: 1.6;
			margin: 0;
		}

		.recipe-tags {
			display: flex;
			flex-wrap: wrap;
			gap: 0.5rem;
			margin-top: auto;
		}

		/* Responsive */
		@media (max-width: 768px) {
			.recipes-grid {
				grid-template-columns: 1fr;
			}
		}
	</style>
</BaseLayout>
