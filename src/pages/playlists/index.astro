---
import PageLayout from "@/layouts/Base";
import type { Playlist } from "@/lib/types/spotify";

const playlistsResponse = await fetch(import.meta.env.API_URL + "/spotify/playlists/monthly");
const playlists: Playlist[] = await playlistsResponse.json();
const pastPlaylistsResponse = await fetch(import.meta.env.API_URL + "/spotify/playlists/years");
const pastPlaylists: Playlist[] = await pastPlaylistsResponse.json();

// Debug: Log first playlist artwork during build
if (playlists.length > 0) {
  console.log(`[BUILD] First playlist: ${playlists[0].name}, artwork URL: ${playlists[0].artwork?.[0]?.url?.substring(0, 80)}...`);
}
const meta = {
  title: "Spotify Jams",
  description: "A collection of monthly liked songs",
};

export const prerender = true;
---

<PageLayout meta={meta}>
  <div class="playlists-listing">
    <header class="page-header">
      <h1 class="page-title">
        <span class="accent-slash">//</span> Spotify Jams
      </h1>
      <p class="page-subtitle">
        A collection of monthly liked songs and musical discoveries
      </p>
    </header>

    <section class="playlists-section">
      <h2 class="section-title">Year so far...</h2>
      <div class="playlists-grid">
        {
          playlists.map((playlist) => (
            <article class="playlist-card">
              <a href={`/playlists/${playlist.id}`} class="playlist-link">
                <div class="playlist-card-image crt-filter">
                  <img
                    src={playlist.artwork[0]?.url ?? ""}
                    alt={playlist.name}
                    class="crt-image"
                  />
                  <div class="playlist-overlay">
                    <div class="playlist-icon">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M8 5v14l11-7z" />
                      </svg>
                    </div>
                  </div>
                </div>
                <div class="playlist-card-content">
                  <h3 class="playlist-card-title">{playlist.name}</h3>
                  <p class="playlist-card-meta">
                    {playlist.tracks.length} tracks
                  </p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </section>

    <section class="playlists-section">
      <h2 class="section-title">Past Jams</h2>
      <div class="playlists-grid">
        {
          pastPlaylists.map((playlist) => (
            <article class="playlist-card">
              <a href={`/playlists/${playlist.id}`} class="playlist-link">
                <div class="playlist-card-image crt-filter">
                  <img
                    src={playlist.artwork[0]?.url ?? ""}
                    alt={playlist.name}
                    class="crt-image"
                  />
                  <div class="playlist-overlay">
                    <div class="playlist-icon">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M8 5v14l11-7z" />
                      </svg>
                    </div>
                  </div>
                </div>
                <div class="playlist-card-content">
                  <h3 class="playlist-card-title">{playlist.name}</h3>
                  <p class="playlist-card-meta">
                    {playlist.tracks.length} tracks
                  </p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </section>
  </div>

  <style>
    .playlists-listing {
      display: flex;
      flex-direction: column;
      gap: var(--space-xl);
    }

    /* Page header and title styles from global.css */

    .playlists-section {
      margin-bottom: var(--space-xl);
    }

    .section-title {
      font-family: "JetBrains Mono", monospace;
      font-size: var(--text-xl);
      font-weight: 600;
      margin: 0 0 var(--space-lg) 0;
      color: var(--color-purple);
      letter-spacing: -0.01em;
    }

    .playlists-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: var(--space-md);
    }

    .playlist-card {
      background: var(--theme-bg-secondary);
      border: var(--border-weight) solid rgba(255, 255, 255, 0.08);
      border-radius: var(--radius-subtle);
      overflow: hidden;
      transition:
        border-color var(--transition-fast),
        transform var(--transition-fast),
        box-shadow var(--transition-fast);
    }

    .playlist-card:hover {
      border-color: var(--theme-accent);
      transform: translate(-3px, -3px);
      box-shadow: 3px 3px 0 var(--theme-accent);
    }

    .playlist-link {
      display: block;
      text-decoration: none;
      color: inherit;
    }

    .playlist-card-image {
      position: relative;
      overflow: hidden;
      aspect-ratio: 1;
    }

    .playlist-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%);
      transition:
        filter var(--transition-medium),
        transform var(--transition-fast);
      box-shadow:
        2px 0 0 rgba(255, 71, 87, 0.2),
        -2px 0 0 rgba(0, 217, 255, 0.2);
    }

    .playlist-card:hover .playlist-card-image img {
      filter: grayscale(0%);
      animation: playlist-img-glitch 3s steps(1) infinite;
      box-shadow:
        3px 0 0 rgba(255, 71, 87, 0.4),
        -3px 0 0 rgba(0, 217, 255, 0.4);
    }

    @keyframes playlist-img-glitch {
      0%,
      90%,
      100% {
        filter: grayscale(0%);
        transform: translateX(0);
      }
      91% {
        filter: grayscale(0%) hue-rotate(30deg) saturate(1.3);
        transform: translateX(-2px);
      }
      93% {
        filter: grayscale(0%) hue-rotate(-30deg) brightness(1.1);
        transform: translateX(3px);
      }
      95% {
        filter: grayscale(0%) saturate(1.5);
        transform: translateX(-1px);
      }
    }

    .playlist-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity var(--transition-medium);
    }

    .playlist-card:hover .playlist-overlay {
      opacity: 1;
    }

    .playlist-icon {
      width: 3rem;
      height: 3rem;
      background: var(--color-success);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--theme-bg);
    }

    .playlist-icon svg {
      width: 1.5rem;
      height: 1.5rem;
      margin-left: 2px;
    }

    .playlist-card-content {
      padding: var(--space-md);
    }

    .playlist-card-title {
      margin: 0 0 var(--space-xs) 0;
      font-family: "JetBrains Mono", monospace;
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--theme-text);
      letter-spacing: -0.01em;
      line-height: 1.3;
    }

    .playlist-card-meta {
      margin: 0;
      font-family: "JetBrains Mono", monospace;
      font-size: var(--text-xs);
      color: var(--theme-muted);
    }

    @media (max-width: 768px) {
      .playlists-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      }

      .playlist-card-content {
        padding: var(--space-sm);
      }

      .playlist-card-title {
        font-size: var(--text-sm);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .playlist-card:hover {
        transform: none;
        box-shadow: none;
      }
    }
  </style>
</PageLayout>
